.lk-client form
  height 0
  overflow hidden
  position absolute
  top 0
  right 0
  background #fff
  padding 0 10px
  border-radius 10px
  shadow()
  opacity 0
  transition: padding .2s ease-out, height .2s ease-out, opacity .2s ease-out, top .2s ease-out

  input
    font-size 14px
    padding 5px 0
    border-bottom 1px solid (colors.text.silver)

  button
    width 100%
    margin-top 10px
    padding 8px 0

  &.show
    padding 10px
    height 90px
    opacity 1
    top 30px

.lk-client-helper
  position absolute
  top 7px
  right 10px
  text-align center
  font-size 13px
  width 0
  padding 9px 0
  height 34px
  background colors.greenlight
  border-radius 4px
  transition width .3s ease-out, padding .3s ease-out
  overflow hidden
  white-space nowrap

  &.show
    width 147px
    padding 9px 2px

  &.error
    background colors.error
    color #fff1f1
