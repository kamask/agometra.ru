#calc
	+media-max(1200)
		width: 320px

	+media-max(980)
		width: 100%
		display: flex
		flex-direction: column
		align-items: center

#calc-controls

	+media-max(1199)
		margin-right: 20px

	+media-max(980)
		width: 310px
		margin-top: 20px
		margin-right: 0

	+media-max(360)
		width: 270px

	>div
		display: flex
		flex-wrap: nowrap
		margin-top: 10px
		position: relative

		>span
			display: flex
			justify-content: center
			align-items: center
			font-size: 20px
			font-weight: bold
			color: colors.green
			+media-max(360)
				font-size: 16px

		input
			padding-left: 10px
			width: 80px
			border-radius: 8px
			box-shadow: 0 0 3px rgba(0, 0, 0, .1)
			margin-left: auto

			+media-max(360)
				font-size: 14px
				width: 50px

		>div
			margin-left: 10px
			height: 45px
			display: flex
			flex-direction: column
			justify-content: space-between

			&::selection
				background: transparent !important

			+media-max(360)
				height: 40px
				margin-left: 5px

			&:first-of-type
				margin-left: 10px

				+media-max(360)
					margin-left: 5px

			>div
				background: #fff
				font-size: 14px
				width: 50px
				height: 47%
				display: flex
				justify-content: center
				align-items: center
				color: colors.text.silver
				box-shadow: 0 0 3px rgba(0, 0, 0, .1)
				cursor: pointer
				transition: all .2s ease-out

				&:not(.touchable):hover
					background: colors.greenlight

				&:active
					background: colors.greenlight
					transform: scale(0.95)

				+media-max(360)
					font-size: 12px

				&:first-child
					border-radius: 8px 8px 0 0

				&:last-child
					border-radius: 0 0 8px 8px

			.alert
				position: absolute
				z-index: 15
				top: -80px
				left: 0
				background: #fff
				height: 115px
				padding: 15px 20px
				text-align: center
				border-radius: 10px
				line-height: 1.3
				box-shadow: 0 0 10px 2px rgba(0, 0, 0, .3)
				color: colors.green
				transition: all .3s ease-out
				opacity: 0

				&.show
					top: 0
					opacity: 1

				span
					position: absolute
					top: 8px
					right: 8px
					color: colors.error
					cursor: pointer